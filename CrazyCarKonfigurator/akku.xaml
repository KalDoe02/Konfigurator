        <TextBlock x:Name="Akku4_Daten_Textbox" HorizontalAlignment="Left" Margin="20,326,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="56" Width="375" Grid.Row="1"/>

    <Button
